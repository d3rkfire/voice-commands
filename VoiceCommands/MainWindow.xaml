<Window x:Class="VoiceCommands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoiceCommands"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="150" Loaded="Window_Loaded" Closing="Window_Closing" AllowsTransparency="True" WindowStyle="None" Topmost="True" MouseDown="Window_MouseDown">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="White"/>
    </Window.Background>
    <Grid>
        <TextBox x:Name="txtMain" HorizontalAlignment="Left" Height="200" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <ComboBox x:Name="cboVoiceFolder" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="130" Height="20" SelectionChanged="cboVoiceFolder_SelectionChanged"/>
    </Grid>
</Window>
